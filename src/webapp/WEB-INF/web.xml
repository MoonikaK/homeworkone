<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://oracle.com/webfolder/technetwork/jsc/xml/ns/javaee/web-app_3_0.xsd"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
          http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd
http://oracle.com/webfolder/technetwork/jsc/xml/ns/javaee/web-app_3_0.xsd "
         version="4.0">
    <servlet>
        <servlet-name>ServletA</servlet-name>
        <servlet-class>ServletA</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletB</servlet-name>
        <servlet-class>ServletB</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>ServletA</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletB</servlet-name>
        <url-pattern>/forward</url-pattern>
    </servlet-mapping>
</web-app>